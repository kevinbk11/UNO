    title 文字框範例
    style.
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin:left;
       
      }
      .textbox1 {
      margin-bottom: 15px;
   
      }
      .textbox {
      margin-bottom: 10px;
     
     
      }
      .functionButton{
        justify-content: space-around;
      } 

      body {
      background-image: url('../images/Slide1.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      background-size: cover;
      }
    
  
   


  body
    p(style='display:none',id='password') #{v}
    p(style='display:none',id='name') #{myName}
   
    .container
      input.textbox1(type='text' readonly='' id='roomID' placeholder='房號:' value=roomID) 
      - for (var i=0;i<4;i++)
            input.textbox(type='text' readonly='' id=`name${i+1}` placeholder=`文字框 ${i+1}` value=names[i])
      .functionButton
        input(type='button' id='gameStartButton' readonly='' value="開始遊戲") 
        input(type='button' id='exitButton' readonly='' value='離開房間')  
